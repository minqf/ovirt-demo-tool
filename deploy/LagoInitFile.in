nat-settings: &nat-settings
    type: nat
    dhcp:
      start: 100
      end: 254
    management: False

vm-common-settings: &vm-common-settings
    root-password: 123456
    service_provider: systemd
    artifacts:
      - /var/log

vdsm-host-settings: &vdsm-host-settings
    <<: *vm-common-settings
    vm-type: ovirt-host
    memory: 2047
    nics:
      - net: lago-{{ suite_name }}-net-management
      - net: lago-{{ suite_name }}-net-storage
      - net: lago-{{ suite_name }}-net-bonding
      - net: lago-{{ suite_name }}-net-bonding
    disks:
      - template_name: {{ templates['host'] }}
        type: template
        name: root
        dev: vda
        format: qcow2

domains:
  lago-{{ suite_name }}-engine:
    <<: *vm-common-settings
    vm-type: ovirt-engine
    memory: 4096
    nics:
      - net: lago-{{ suite_name}}-net-management
      - net: lago-{{ suite_name}}-net-storage
    disks:
      - template_name: {{ templates['engine'] }}
        type: template
        name: root
        dev: vda
        format: qcow2
      - comment: Main NFS device
        size: 101G
        type: empty
        name: nfs
        dev: sda
        format: raw
      - comment: Main iSCSI device
        size: 101G
        type: empty
        name: iscsi
        dev: sdc
        format: raw
    metadata:
      ovirt-engine-password: 123
    artifacts:
      - /var/log
      - /root/fluentd

{% for i in range(host_count) %}
  lago-{{ suite_name }}-host-{{ i }}:
    <<: *vdsm-host-settings
{% endfor %}

nets:
  lago-{{ suite_name }}-net-management:
    <<: *nat-settings
    management: true
    dns_domain_name: lago.local
  lago-{{ suite_name }}-net-bonding:
    <<: *nat-settings
  lago-{{ suite_name }}-net-storage:
    <<: *nat-settings
